  "homepage": "https://github.com/felix-dumit/EasySpotlight",
  "license": "MIT",
  "authors": {
    "Felix Dumit": "felix.dumit@gmail.com"
  },
  "source": {
    "git": "https://github.com/felix-dumit/EasySpotlight.git",
    "tag": "0.2.0"
  },
  "platforms": {
    "ios": "9.0"
  },
  "requires_arc": true,
  "source_files": "Pod/Classes/**/*",
