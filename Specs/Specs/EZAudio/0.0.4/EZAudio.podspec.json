{
  "name": "EZAudio",
  "version": "0.0.4",
  "summary": "A simple, intuitive audio framework for iOS and OSX useful for anyone doing audio processing and/or audio-based visualizations.",
  "homepage": "http://syedharisali.com/projects/EZAudio/getting-started",
  "screenshots": "https://s3-us-west-1.amazonaws.com/ezaudio-media/EZAudioSummary.png",
  "license": {
    "type": "MIT",
    "file": "LICENSE"
  },
  "authors": {
    "Syed Haris Ali": "syedhali07@gmail.com"
  },
  "platforms": {
    "ios": "6.0",
    "osx": "10.8"
  },
  "source": {
    "git": "https://github.com/syedhali/EZAudio.git",
    "tag": "0.0.4"
  },
  "source_files": "EZAudio/*.{h,m,c}",
  "exclude_files": "EZAudio/VERSION",
  "ios": {
    "frameworks": [
      "AudioToolbox",
      "AVFoundation",
      "GLKit"
    ]
  },
  "osx": {
    "frameworks": [
      "AudioToolbox",
      "AudioUnit",
      "CoreAudio",
      "QuartzCore",
      "OpenGL",
      "GLKit"
    ]
  },
  "requires_arc": true
}
