{
  "name": "EZAudio",
  "version": "0.9.1",
  "summary": "A simple, intuitive audio framework for iOS and OSX useful for anyone doing audio processing and/or audio-based visualizations.",
  "homepage": "https://github.com/syedhali/EZAudio",
  "screenshots": "https://s3-us-west-1.amazonaws.com/ezaudio-media/EZAudioSummary.png",
  "license": {
    "type": "MIT",
    "file": "LICENSE"
  },
  "authors": {
    "Syed Haris Ali": "syedhali07@gmail.com"
  },
  "platforms": {
    "ios": "6.0",
    "osx": "10.8"
  },
  "source": {
    "git": "https://github.com/syedhali/EZAudio.git",
    "tag": "0.9.1"
  },
  "exclude_files": [
    "EZAudio/VERSION",
    "EZAudio/TPCircularBuffer.{h,c}"
  ],
  "ios": {
    "frameworks": [
      "AudioToolbox",
      "AVFoundation",
      "GLKit"
    ]
  },
  "osx": {
    "frameworks": [
      "AudioToolbox",
      "AudioUnit",
      "CoreAudio",
      "QuartzCore",
      "OpenGL",
      "GLKit"
    ]
  },
  "requires_arc": true,
  "default_subspecs": "Full",
  "subspecs": [
    {
      "name": "Core",
      "source_files": "EZAudio/*.{h,m,c}"
    },
    {
      "name": "Full",
      "dependencies": {
        "TPCircularBuffer": [
          "~> 0.0"
        ],
        "EZAudio/Core": [

        ]
      }
    }
  ]
}
