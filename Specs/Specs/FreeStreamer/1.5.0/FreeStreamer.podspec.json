{
  "name": "FreeStreamer",
  "version": "1.5.0",
  "license": "BSD",
  "summary": "A low-memory footprint streaming audio client for iOS and OS X.",
  "homepage": "https://github.com/muhku/FreeStreamer",
  "authors": {
    "Matias Muhonen": "mmu@iki.fi"
  },
  "source": {
    "git": "https://github.com/muhku/FreeStreamer.git",
    "tag": "1.5.0"
  },
  "platforms": {
    "ios": "6.0",
    "osx": "10.7"
  },
  "source_files": [
    "Common/*.{h,m,mm}",
    "astreamer/*.{h,cpp}"
  ],
  "ios": {
    "frameworks": [
      "CFNetwork",
      "AudioToolbox",
      "AVFoundation",
      "MediaPlayer"
    ]
  },
  "osx": {
    "frameworks": [
      "CFNetwork",
      "AudioToolbox",
      "AVFoundation"
    ]
  },
  "libraries": [
    "xml2",
    "stdc++"
  ],
  "xcconfig": {
    "HEADER_SEARCH_PATHS": "$(SDKROOT)/usr/include/libxml2"
  },
  "requires_arc": true
}
