  "homepage": "https://github.com/idamediafoundry/Reliant",
  "license": "Apache Licence 2.0",
  "authors": {
    "iDA MediaFoundry": "info@ida-mediafoundry.be",
    "Mike Seghers": "mike@oakcs.be"
  },
  "source": {
    "git": "https://github.com/idamediafoundry/Reliant.git",
    "tag": "0.0.1"
  },
  "platforms": {
    "ios": "5.0",
    "osx": "10.7"
  },
  "source_files": "Reliant/**/*.{h,m}",
