{
  "name": "Harbeth",
  "version": "0.4.7",
  "summary": "About Metal graphics processing.",
  "homepage": "https://github.com/yangKJ/Harbeth",
  "license": {
    "type": "MIT",
    "file": "LICENSE"
  },
  "authors": {
    "Condy": "ykj310@126.com"
  },
  "source": {
    "git": "https://github.com/yangKJ/Harbeth.git",
    "tag": "0.4.7"
  },
  "swift_versions": "5.0",
  "requires_arc": true,
  "static_framework": true,
  "platforms": {
    "ios": "10.0",
    "osx": "10.13"
  },
  "pod_target_xcconfig": {
    "SWIFT_VERSION": "5.0"
  },
  "subspecs": [
    {
      "name": "Basic",
      "source_files": "Sources/Basic/**/*.swift",
      "weak_frameworks": [
        "ImageIO",
        "MetalKit",
        "AVFoundation"
      ]
    },
    {
      "name": "Collector",
      "source_files": "Sources/Collector/*.swift",
      "dependencies": {
        "Harbeth/Basic": [

        ]
      },
      "pod_target_xcconfig": {
        "SWIFT_ACTIVE_COMPILATION_CONDITIONS": "HARBETH_COLLECTOR",
        "GCC_PREPROCESSOR_DEFINITIONS": "HARBETH_COLLECTOR=1"
      }
    },
    {
      "name": "Compute",
      "source_files": "Sources/Compute/**/*.swift",
      "resource_bundles": {
        "Harbeth": [
          "Sources/Compute/**/*.metal"
        ]
      },
      "weak_frameworks": [
        "MetalPerformanceShaders",
        "MetalKit"
      ],
      "dependencies": {
        "Harbeth/Basic": [

        ]
      }
    },
    {
      "name": "CoreImage",
      "source_files": "Sources/CoreImage/**/*.swift",
      "weak_frameworks": "CoreImage",
      "dependencies": {
        "Harbeth/Basic": [

        ]
      }
    }
  ],
  "swift_version": "5.0"
}
