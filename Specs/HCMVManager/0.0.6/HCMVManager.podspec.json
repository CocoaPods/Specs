{
  "name": "HCMVManager",
  "version": "0.0.6",
  "summary": "这是一个与视频录制与剪辑相关核心库。",
  "description": "这是一个特定的核心库。包含了常用录像、剪辑、合成、及视频滤镜相关的功能。",
  "homepage": "https://github.com/halfking/HCMVManager",
  "license": "MIT",
  "authors": {
    "halfking": "kimmy.huang@gmail.com"
  },
  "platforms": {
    "ios": "7.0"
  },
  "source": {
    "git": "https://github.com/halfking/HCMVManager",
    "tag": "0.0.6"
  },
  "source_files": "HCMVManager/**/*.{h,m,mm,c,cpp}",
  "libraries": [
    "icucore",
    "stdc++"
  ],
  "xcconfig": {
    "CLANG_ALLOW_NON_MODULAR_INCLUDES_IN_FRAMEWORK_MODULES": "YES",
    "ENABLE_BITCODE": "YES",
    "DEFINES_MODULE": "YES",
    "HEADER_SEARCH_PATHS": "$(inherited)",
    "LIBRARY_SEARCH_PATHS": "$(inherited)"
  },
  "pod_target_xcconfig": {
    "LIBRARY_SEARCH_PATHS": "$(inherited) "
  },
  "dependencies": {
    "HCMinizip": [
      "~> 1.2.6"
    ],
    "hccoren": [
      "~> 0.1.5"
    ],
    "HCBaseSystem": [
      "~> 0.2.1"
    ]
  }
}
