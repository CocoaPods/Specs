  },
  "subspecs": [
    {
      "name": "ASDealloc2MainObject",
      "requires_arc": false,
      "source_files": [
        "AsyncDisplayKit/Private/_AS-objc-internal.h",
        "AsyncDisplayKit/Details/ASDealloc2MainObject.h",
        "AsyncDisplayKit/Details/ASDealloc2MainObject.m"
      ]
    }
