{
  "name": "Fiorite",
  "version": "0.0.3",
  "summary": "Components and utilities for iOS, based on the Pearl iOS library.",
  "homepage": "https://github.com/link-nv/Fiorite",
  "license": {
    "type": "LGPL v3",
    "file": "LICENSE"
  },
  "authors": {
    "Wim Vandenhaute": "wim.vandenhaute@gmail.com"
  },
  "platforms": {
    "ios": "5.0",
    "osx": "10.7"
  },
  "source": {
    "git": "https://github.com/link-nv/Fiorite.git",
    "tag": "0.0.3"
  },
  "resources": [
    "Fiorite/Fiorite/*.lproj"
  ],
  "ios": {
    "source_files": [
      "Fiorite/Fiorite/*.{h,m}",
      "Fiorite/Fiorite-iOS/*.{h,m}"
    ],
    "frameworks": [
      "Security",
      "MobileCoreServices",
      "SystemConfiguration"
    ],
    "dependencies": {
      "UIColor-Utilities": [
        "~> 1.0.1"
      ]
    }
  },
  "osx": {
    "frameworks": [
      "Security",
      "CoreServices",
      "SystemConfiguration"
    ],
    "source_files": "Fiorite/Fiorite/*.{h,m}"
  },
  "requires_arc": true,
  "dependencies": {
    "AFNetworking": [
      "~> 1.3.2"
    ],
    "Reachability": [
      "~> 3.1.0"
    ],
    "TouchJSON": [
      "~> 1.1"
    ],
    "JRSwizzle": [
      "~> 1.0"
    ]
  }
}