{
  "name": "iMRuby",
  "version": "0.1.1",
  "summary": "iMRuby is a bridge between ObjC with Ruby(Mruby)",
  "description": "iMRuby is a bridge between ObjC with Ruby(Mruby),\nlike JavascriptCore framework.",
  "homepage": "https://github.com/tailang/iMRuby",
  "license": {
    "type": "MIT",
    "file": "LICENSE"
  },
  "authors": {
    "ping.cao": "caopingcpu@163.com"
  },
  "source": {
    "git": "https://github.com/tailang/iMRuby.git",
    "tag": "0.1.1"
  },
  "platforms": {
    "ios": "9.0"
  },
  "source_files": "iMRuby/Classes/**/*",
  "resource_bundles": {
    "iMRuby": [
      "iMRuby/Assets/**/*"
    ]
  },
  "pod_target_xcconfig": {
    "CLANG_ALLOW_NON_MODULAR_INCLUDES_IN_FRAMEWORK_MODULES": "YES",
    "VALID_ARCHS": "x86_64 armv7 arm64"
  },
  "dependencies": {
    "MRubyFramework": [
      "2.1.2"
    ]
  },
  "vendored_libraries": "iMRuby/Classes/MRBLibffi/libffi.a"
}
