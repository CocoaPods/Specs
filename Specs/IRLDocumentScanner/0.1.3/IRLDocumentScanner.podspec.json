{
  "name": "IRLDocumentScanner",
  "version": "0.1.3",
  "summary": "A Drop-in Document Scanner based View Controller.",
  "description": "A very simple to use class allowing you scan document with border detection.",
  "license": {
    "type": "Copyright 2015. iRLMobile. Luxembourg",
    "file": "LICENSE.txt"
  },
  "homepage": "https://github.com/charlymr/IRLDocumentScanner",
  "authors": {
    "Denis Martin": "support@irlmobile.com"
  },
  "source": {
    "git": "https://github.com/charlymr/IRLDocumentScanner.git",
    "branch": "master",
    "tag": "0.1.3"
  },
  "platforms": {
    "ios": "8.0"
  },
  "default_subspecs": "Default",
  "subspecs": [
    {
      "name": "Default",
      "source_files": [
        "Source",
        "Source/**/*.{h,m}"
      ],
      "resources": [
        "*.storyboard",
        "*.xcassets"
      ],
      "ios": {
        "frameworks": [
          "Foundation",
          "UIKit",
          "AVFoundation",
          "CoreImage",
          "GLKit"
        ]
      },
      "requires_arc": true,
      "public_header_files": [
        "Source/Public/**/*.h",
        "Source/IRLDocumentScanner.h"
      ],
      "private_header_files": "Source/Private/**/*.h"
    },
    {
      "name": "Private",
      "source_files": [
        "Source",
        "Source/**/*.{h,m}"
      ],
      "resources": [
        "*.storyboard",
        "*.xcassets"
      ],
      "ios": {
        "frameworks": [
          "Foundation",
          "UIKit",
          "AVFoundation",
          "CoreImage",
          "GLKit"
        ]
      },
      "requires_arc": true,
      "public_header_files": [
        "Source/Public/**/*.h",
        "Source/IRLDocumentScanner.h",
        "Source/Private/**/*.h"
      ]
    }
  ]
}
