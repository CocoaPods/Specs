{
  "name": "ESDatabaseWrapper",
  "version": "1.0",
  "summary": "Objective-C protocols for FMDB",
  "description": "A library that wraps FMDB into protocols. The database engine can be easily replaced.",
  "homepage": "https://github.com/dodikk/ESDatabaseWrapper",
  "license": {
    "type": "BSD",
    "file": "LICENSE-BSD.txt"
  },
  "source": {
    "git": "https://github.com/dodikk/ESDatabaseWrapper.git",
    "tag": "v1.0"
  },
  "authors": {
    "Alexander Dodatko": "dodikk88.tutor@gmail.com"
  },
  "platforms": {
    "ios": "6.0"
  },
  "ios": {
    "requires_arc": true,
    "header_mappings_dir": "ESDatabaseWrapper",
    "source_files": "ESDatabaseWrapper/**/*.{c,cpp,mm,h,m}",
    "prefix_header_file": "ESDatabaseWrapper/ESDatabaseWrapper-Prefix.pch",
    "dependencies": {
      "FMDB": [
        "~> 2.0"
      ]
    },
    "frameworks": "Foundation",
    "libraries": [
      "sqlite3",
      "c++",
      "stdc++"
    ]
  }
}