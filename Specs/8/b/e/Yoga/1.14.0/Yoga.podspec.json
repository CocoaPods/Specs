  "source": {
    "git": "https://github.com/facebook/yoga.git",
    "tag": "1.14.0"
  },
  "platforms": {
    "ios": "8.0",
    "osx": "10.7",
    "tvos": "10.0",
    "watchos": "2.0"
  },
  "module_name": "yoga",
  "requires_arc": false,
  "pod_target_xcconfig": {
    "DEFINES_MODULE": "YES"
  },
  "compiler_flags": [
    "-fno-omit-frame-pointer",
    "-fexceptions",
    "-Wall",
    "-Werror",
    "-std=c++1y",
    "-fPIC"
  ],
  "source_files": "yoga/**/*.{c,h,cpp}",
  "public_header_files": "yoga/{Yoga,YGEnums,YGMacros,YGValue}.h"
