{
  "name": "secp256k1",
  "version": "0.7.0",
  "summary": "Optimized C library for EC operations on curve secp256k1",
  "description": "Optimized C library for EC operations on curve secp256k1. This library provides cryptographic functions for Bitcoin and other cryptocurrencies, including ECDSA signing and verification, Schnorr signatures, and more.",
  "homepage": "https://github.com/bitcoin-core/secp256k1",
  "license": {
    "type": "MIT",
    "file": "COPYING"
  },
  "authors": {
    "daviyang35": "daviyang35@gmail.com"
  },
  "source": {
    "git": "https://github.com/bitcoin-core/secp256k1.git",
    "tag": "v0.7.0"
  },
  "platforms": {
    "ios": "13.0",
    "osx": "10.15"
  },
  "public_header_files": "include/*.h",
  "source_files": [
    "src/*.c",
    "src/**/*.h",
    "include/*.h"
  ],
  "exclude_files": [
    "src/asm",
    "src/bench_ecmult.c",
    "src/bench_internal.c",
    "src/bench.c",
    "src/modules/**/bench_impl.h",
    "src/modules/**/tests_exhaustive_impl.h",
    "src/modules/**/tests_impl.h",
    "src/precompute_ecmult_gen.c",
    "src/precompute_ecmult.c",
    "src/tests_exhaustive.c",
    "src/tests.c",
    "src/valgrind_ctime_test.c",
    "src/ctime_tests.c"
  ],
  "compiler_flags": [
    "-DENABLE_MODULE_ECDH",
    "-DENABLE_MODULE_EXTRAKEYS",
    "-DENABLE_MODULE_RECOVERY",
    "-DENABLE_MODULE_SCHNORRSIG",
    "-DECMULT_GEN_PREC_BITS=4",
    "-DECMULT_WINDOW_SIZE=15"
  ],
  "xcconfig": {
    "HEADER_SEARCH_PATHS": "$(SRCROOT)/secp256k1 $(SRCROOT)/secp256k1/src $(SRCROOT)/secp256k1/include",
    "OTHER_CFLAGS": "-pedantic -Wall -Wextra -Wcast-align -Wnested-externs -Wshadow -Wstrict-prototypes -Wno-shorten-64-to-32 -Wno-conditional-uninitialized -Wno-unused-function -Wno-long-long -Wno-overlength-strings -O3"
  }
} 