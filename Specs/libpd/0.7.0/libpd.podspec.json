{
  "name": "libpd",
  "version": "0.7.0",
  "license": {
    "type": "Standard Improved BSD License",
    "file": "License.txt"
  },
  "summary": "libpd turns Pd into an embeddable library, so you can use Pd as a sound engine in mobile phone apps, games, web pages, and art projects.",
  "homepage": "http://libpd.cc/",
  "authors": {
    "Jasper Blues (spec maintainer only)": "jasper@appsquick.ly"
  },
  "source": {
    "git": "https://github.com/libpd/libpd.git",
    "tag": "0.7.0"
  },
  "source_files": [
    "cpp/**/*.{hpp,cpp}",
    "libpd_wrapper/**/*.{h,c}",
    "objc/**/*.{h,m}",
    "pure-data/src/**/*.{h,c}"
  ],
  "platforms": {
    "ios": "5.0"
  },
  "requires_arc": false,
  "frameworks": "Foundation",
  "compiler_flags": "-w -DPD -DUSEAPI_DUMMY -DHAVE_LIBDL -DHAVE_UNISTD_H"
}
