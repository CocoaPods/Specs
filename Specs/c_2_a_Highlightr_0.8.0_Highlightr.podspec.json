{
  "name": "Highlightr",
  "version": "0.8.0",
  "summary": "iOS & OSX Syntax Highlighter.",
  "description": "Highlightr is an iOS & OSX syntax highlighter built with Swift. It uses highlight.js as it core, supports 152 languages and comes with 72 styles.",
  "homepage": "https://github.com/raspu/Highlightr",
  "screenshots": [
    "http://raw.githubusercontent.com/raspu/Highlightr/master/themes.gif",
    "http://raw.githubusercontent.com/raspu/Highlightr/master/coding.gif"
  ],
  "license": "MIT",
  "authors": {
    "J.P. Illanes": "jpillaness@gmail.com"
  },
  "source": {
    "git": "https://github.com/raspu/Highlightr.git",
    "tag": "0.8.0",
    "submodules": true
  },
  "platforms": {
    "osx": "10.11",
    "ios": "8.0"
  },
  "requires_arc": true,
  "source_files": "Pod/Classes/**/*.{swift}",
  "resources": "Pod/Assets/**/*.{css,js}",
  "ios": {
    "frameworks": "UIKit"
  },
  "osx": {
    "frameworks": "AppKit"
  }
}
