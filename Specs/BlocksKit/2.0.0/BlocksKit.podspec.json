      "source_files": [
        "BlocksKit/BlocksKit.h",
        "BlocksKit/Dynamic Delegate/*.{h,m}",
        "BlocksKit/Dynamic Delegate/Foundation/*.{h,m}"
      ],
      "ios": {
        "dependencies": {
          "libffi": [

          ]
        }
      },
      "osx": {
        "libraries": "ffi"
      }
    },
    {
      "name": "MessageUI",
      "dependencies": {
        "BlocksKit/DynamicDelegate": [

        ]
      },
      "platforms": {
        "ios": null
      },
      "source_files": [
        "BlocksKit/BlocksKit+MessageUI.h",
        "BlocksKit/MessageUI/*.{h,m}"
      ],
      "ios": {
        "frameworks": "MessageUI"
      }
    },
    {
      "name": "UIKit",
      "dependencies": {
        "BlocksKit/DynamicDelegate": [

        ]
      },
      "platforms": {
