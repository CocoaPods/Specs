  "default_subspec": "All",
  "subspecs": [
    {
      "name": "All",
      "dependencies": {
        "BlocksKit/Core": [

        ],
        "BlocksKit/DynamicDelegate": [

        ]
      },
      "ios": {
        "dependencies": {
          "BlocksKit/MessageUI": [

          ],
          "BlocksKit/UIKit": [

          ]
        }
      }
    },
    {
      "name": "Core",
      "source_files": [
        "BlocksKit/BlocksKit.h",
        "BlocksKit/Core/*.{h,m}"
      ]
    },
    {
