{
  "name": "Typhoon",
  "version": "1.5.9",
  "license": "Apache2.0",
  "summary": "A dependency injection container for Objective-C. Light-weight, yet flexible and full-featured.",
  "homepage": "http://www.typhoonframework.org",
  "authors": {
    "Jasper Blues, Robert Gilliam & Contributors": "jasper@appsquick.ly"
  },
  "source": {
    "git": "https://github.com/typhoon-framework/Typhoon.git",
    "tag": "1.5.9",
    "submodules": true
  },
  "source_files": "Source/**/*.{h,m}",
  "ios": {
    "exclude_files": "Source/osx"
  },
  "osx": {
    "exclude_files": "Source/ios"
  },
  "libraries": [
    "z",
    "xml2"
  ],
  "xcconfig": {
    "HEADER_SEARCH_PATHS": "$(SDKROOT)/usr/include/libxml2"
  },
  "requires_arc": true
}