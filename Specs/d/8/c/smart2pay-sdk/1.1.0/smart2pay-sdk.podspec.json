{
  "name": "smart2pay-sdk",
  "version": "1.1.0",
  "summary": "Mobile SDK to connect to Smart2Pay – a Nuvei Company – payment platform",
  "description": "By using Smart2Pay SDK for mobile, you can quickly integrate more payment options directly in your mobile application. Our SDK provides one unique interface to Cards, Alipay and WeChat in-app payments.",
  "homepage": "https://docs.smart2pay.com/category/smart2pay-mobile-sdk",
  "license": {
    "type": "Commercial",
    "file": "LICENSE.md"
  },
  "authors": "Smart2Pay – a Nuvei Company",
  "source": {
    "git": "https://github.com/Smart2Pay/SDK-iOS-release.git",
    "tag": "1.1.0"
  },
  "module_name": "Smart2Pay",
  "platforms": {
    "ios": "12.1"
  },
  "requires_arc": true,
  "swift_versions": [
    "5.0",
    "5.1",
    "5.2"
  ],
  "libraries": [
    "c++",
    "sqlite3.0",
    "z"
  ],
  "vendored_frameworks": "Smart2Pay.framework",
  "frameworks": [
    "CFNetwork",
    "CoreMotion",
    "CoreTelephony",
    "Security",
    "SystemConfiguration",
    "UIKit"
  ],
  "xcconfig": {
    "EXCLUDED_ARCHS[sdk=iphonesimulator*]": "arm64"
  },
  "pod_target_xcconfig": {
    "EXCLUDED_ARCHS[sdk=iphonesimulator*]": "arm64"
  },
  "swift_version": "5.2"
}
