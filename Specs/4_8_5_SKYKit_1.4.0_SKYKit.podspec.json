{
  "name": "SKYKit",
  "version": "1.4.0",
  "summary": "iOS SDK for Skygear",
  "description": "This is the client library for Skygear backend.",
  "homepage": "https://github.com/SkygearIO/skygear-SDK-iOS",
  "license": "Apache License, Version 2.0",
  "authors": {
    "Oursky Ltd.": "hello@oursky.com"
  },
  "source": {
    "git": "https://github.com/SkygearIO/skygear-SDK-iOS.git",
    "tag": "1.4.0"
  },
  "platforms": {
    "ios": "8.0"
  },
  "default_subspecs": [
    "Core",
    "ForgotPassword",
    "SSO"
  ],
  "subspecs": [
    {
      "name": "Core",
      "requires_arc": true,
      "platforms": {
        "ios": "8.0",
        "osx": "10.9"
      },
      "source_files": "Pod/Classes/**/*",
      "private_header_files": "Pod/Classes/**/*_Private.h",
      "dependencies": {
        "FMDB": [
          "~> 2.6.0"
        ],
        "SocketRocket": [
          "~> 0.4"
        ],
        "MagicKit-Skygear": [
          "~> 0.0.6"
        ]
      }
    },
    {
      "name": "Facebook",
      "platforms": {
        "ios": "8.0"
      },
      "source_files": "Pod/Extensions/Facebook/**/*.{h,m}",
      "requires_arc": true,
      "pod_target_xcconfig": {
        "CLANG_ALLOW_NON_MODULAR_INCLUDES_IN_FRAMEWORK_MODULES": "YES"
      },
      "dependencies": {
        "SKYKit/Core": [

        ],
        "FBSDKCoreKit": [
          "~> 4.0"
        ]
      }
    },
    {
      "name": "ForgotPassword",
      "platforms": {
        "ios": "8.0"
      },
      "source_files": "Pod/Extensions/Forgot Password/**/*.{h,m}",
      "requires_arc": true,
      "dependencies": {
        "SKYKit/Core": [

        ]
      }
    },
    {
      "name": "SSO",
      "platforms": {
        "ios": "8.0"
      },
      "source_files": "Pod/Extensions/SSO/**/*.{h,m}",
      "requires_arc": true,
      "dependencies": {
        "SKYKit/Core": [

        ]
      }
    }
  ]
}
