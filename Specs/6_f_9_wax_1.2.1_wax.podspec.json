{
  "name": "wax",
  "version": "1.2.1",
  "summary": "wax Source",
  "description": "Wax is a framework that lets you write native iPhone apps in Lua. It bridges Objective-C and Lua using the Objective-C runtime. With Wax, anything you can do in Objective-C is automatically available in Lua! What are you waiting for, give it a shot!",
  "homepage": "https://github.com/alibaba/wax",
  "license": {
    "type": "Copyright",
    "text": "           MIT License\n"
  },
  "authors": {
    "probablycorey": "probablycorey@gmail.com"
  },
  "source": {
    "git": "https://github.com/alibaba/wax.git",
    "tag": "1.2.1"
  },
  "platforms": {
    "ios": "4.3"
  },
  "source_files": [
    "lib/*.{h,m}",
    "lib/adaptation/*.{h,m}",
    "lib/lua/*.{h,m,c}",
    "lib/extensions/block/*.{h,m}",
    "lib/extensions/capi/**/*.{h,m,c}",
    "lib/extensions/CGAffine/*.{h,m}",
    "lib/extensions/CGContext/*.{h,m}",
    "lib/extensions/filesystem/*.{h,m}",
    "lib/extensions/HTTP/*.{h,m}",
    "lib/extensions/ivar/*.{h,m}",
    "lib/extensions/json/**/**/*.{h,m,c}",
    "lib/extensions/memory/*.{h,m,c}",
    "lib/extensions/SQLite/**/*.{h,m}",
    "lib/extensions/xml/**/*.{h,m}"
  ],
  "public_header_files": [
    "lib/wax.h",
    "lib/lua/lua.h",
    "lib/lua/luaconf.h",
    "lib/extensions/HTTP/wax_http.h",
    "lib/extensions/json/wax_json.h",
    "lib/extensions/filesystem/wax_filesystem.h"
  ],
  "libraries": [
    "xml2",
    "sqlite3"
  ],
  "xcconfig": {
    "HEADER_SEARCH_PATHS": "${SDK_DIR}/usr/include/libxml2"
  },
  "requires_arc": false,
  "module_name": "wax"
}
