{
  "name": "NGKit",
  "version": "0.1.1",
  "source": {
    "git": "https://github.com/NagiYan/NGKit.git",
    "tag": "0.1.1"
  },
  "summary": "my lib, with some usefull tools, use swift + oc, no dependency on other pods",
  "description": "Blocks,Device,Extension,Pattern,View, some useful extensions, some view, location services and so on",
  "homepage": "https://github.com/NagiYan/NGKit",
  "license": "MIT",
  "authors": {
    "nagi": "yxj@foxmail.com"
  },
  "platforms": {
    "ios": "8.0"
  },
  "default_subspecs": "All",
  "subspecs": [
    {
      "name": "All",
      "ios": {
        "dependencies": {
          "NGKit/Blocks": [

          ],
          "NGKit/Device": [

          ],
          "NGKit/Extension": [

          ],
          "NGKit/Pattern": [

          ],
          "NGKit/View": [

          ]
        }
      }
    },
    {
      "name": "Blocks",
      "requires_arc": true,
      "source_files": "NGKit/Blocks/*",
      "exclude_files": "NGKitTests/*",
      "frameworks": "UIKit"
    },
    {
      "name": "Device",
      "requires_arc": true,
      "source_files": "NGKit/Device/*",
      "exclude_files": "NGKitTests/*",
      "frameworks": "UIKit"
    },
    {
      "name": "Extension",
      "requires_arc": true,
      "source_files": [
        "NGKit/Extension/**/*",
        "NGKit/NGCommon.swift"
      ],
      "exclude_files": "NGKitTests/*",
      "frameworks": "UIKit"
    },
    {
      "name": "Pattern",
      "requires_arc": true,
      "source_files": "NGKit/Pattern/*",
      "exclude_files": "NGKitTests/*",
      "frameworks": "UIKit"
    },
    {
      "name": "View",
      "requires_arc": true,
      "source_files": [
        "NGKit/View/*",
        "NGKit/Extension/UI/*",
        "NGKit/NGCommon.swift"
      ],
      "exclude_files": "NGKitTests/*",
      "frameworks": "UIKit"
    }
  ]
}
