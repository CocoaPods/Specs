{
  "name": "spdlog",
  "version": "1.6.1",
  "summary": "Very fast, header-only/compiled, C++ logging library.",
  "description": "TODO: Add long description of the pod here.",
  "homepage": "https://github.com/gabime/spdlog",
  "license": {
    "type": "MIT"
  },
  "authors": {
    "Hien Nguyen": "hien.nguyenle.it@gmail.com"
  },
  "source": {
    "git": "https://github.com/gabime/spdlog.git",
    "tag": "v1.6.1"
  },
  "pod_target_xcconfig": {
    "HEADER_SEARCH_PATHS": "${PODS_TARGET_SRCROOT}/include",
    "GCC_PREPROCESSOR_DEFINITIONS": "SPDLOG_COMPILED_LIB",
    "USE_HEADERMAP": "NO"
  },
  "platforms": {
    "ios": "10.0",
    "osx": "10.14"
  },
  "libraries": "c++",
  "source_files": [
    "src/*.cpp",
    "include/**/*.{hpp,h}"
  ],
  "public_header_files": "include/**/*.{hpp,h}",
  "header_mappings_dir": "include",
  "compiler_flags": "-fno-aligned-allocation"
}
