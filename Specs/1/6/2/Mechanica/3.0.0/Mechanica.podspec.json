{
  "name": "Mechanica",
  "version": "3.0.0",
  "license": "MIT",
  "documentation_url": "http://www.tinrobots.org/Mechanica",
  "summary": "A library of Swift utils to ease your iOS/macOS/watchOS/tvOS development.",
  "homepage": "https://github.com/tinrobots/Mechanica",
  "authors": {
    "Alessandro Marzoli": "me@alessandromarzoli.com"
  },
  "source": {
    "git": "https://github.com/tinrobots/Mechanica.git",
    "tag": "3.0.0"
  },
  "requires_arc": true,
  "pod_target_xcconfig": {
    "SWIFT_VERSION": "5.0"
  },
  "swift_versions": "5.0",
  "platforms": {
    "ios": "10.0",
    "osx": "10.12",
    "tvos": "10.0",
    "watchos": "3.0"
  },
  "source_files": [
    "Sources/*.swift",
    "Support/*.{h,m}",
    "Sources/AppKit/*.swift",
    "Sources/CoreGraphics/*.swift",
    "Sources/Foundation/*.swift",
    "Sources/Shared/*.swift",
    "Sources/StandardLibrary/*.swift",
    "Sources/UIKit/*.swift"
  ],
  "ios": {
    "exclude_files": "Sources/AppKit/*.swift"
  },
  "tvos": {
    "exclude_files": "Sources/AppKit/*.swift"
  },
  "watchos": {
    "exclude_files": "Sources/AppKit/*.swift"
  },
  "osx": {
    "exclude_files": "Sources/UIKit/*.swift"
  }
}
