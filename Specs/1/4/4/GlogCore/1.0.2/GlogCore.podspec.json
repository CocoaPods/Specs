  "license": {
    "type": "Apache 2.0",
    "file": "LICENSE.TXT"
  },
  "platforms": {
    "ios": "9.0"
  },
  "source": {
    "git": "https://github.com/HuolalaTech/hll-wp-glog.git",
    "tag": "v1.0.2"
  },
  "source_files": [
    "Core/**/*.{h,m,mm,cpp,hpp}",
    "Core/micro-ecc/*.{h,cpp,inc}",
