  "homepage": "https://github.com/ccworld1000",
  "license": "MIT",
  "authors": {
    "cc": "ccworld1000@gmail.com"
  },
  "social_media_url": "https://github.com/ccworld1000",
  "platforms": {
    "ios": "8.0",
    "osx": "10.9"
  },
  "source": {
    "git": "https://github.com/ccworld1000/CCFont.git",
    "tag": "2.1.0"
  },
  "source_files": [
    "CCFont",
    "CCFont/*.{h,m,c}"
  ],
  "exclude_files": "Classes/Exclude",
  "ios": {
    "frameworks": "UIKit"
  },
  "osx": {
    "frameworks": "AppKit"
  },
  "requires_arc": true
}
