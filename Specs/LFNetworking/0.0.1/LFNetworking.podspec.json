Pod::Spec.new do |s|
  s.name     = 'LFNetworking'
  s.version  = '0.0.1'
  s.license  = 'MIT'
  s.summary  = 'A lightweight networking framework.'
  s.homepage = 'https://github.com/zhangwei100/LFNetworking'
  s.authors  = { 'Wei Zhang' => 'zhangwei100@gmail.com' }
  s.source   = { :git => 'https://github.com/zhangwei100/LFNetworking.git', :tag => "0.0.1", :submodules => false }
  s.requires_arc = true

  s.ios.deployment_target = '7.0'
  s.osx.deployment_target = '10.9'

  s.source_files = 'LFNetworking/*', 'LFNetworking/ThirdParty/*'
  s.exclude_files = 'Example'
  
  s.frameworks = 'Foundation', 'CoreGraphics', 'UIKit', 'MobileCoreServices', 'Security'
end
