{
  "name": "MerchantKit",
  "platforms": {
    "ios": "11.0",
    "osx": "10.14"
  },
  "swift_versions": "5.0",
  "summary": "A modern In-App Purchases management framework for iOS developers.",
  "requires_arc": true,
  "version": "0.13.0",
  "license": {
    "type": "MIT",
    "file": "LICENSE"
  },
  "authors": {
    "Benjamin Mayo": "me@bzamayo.com"
  },
  "homepage": "http://github.com/benjaminmayo/merchantkit",
  "source": {
    "git": "https://github.com/benjaminmayo/merchantkit.git",
    "tag": "0.13.0"
  },
  "frameworks": [
    "CoreFoundation",
    "StoreKit"
  ],
  "source_files": [
    "Source/**/*.{h,swift}"
  ],
  "resources": [
    "Source/Internal/Resources/**/*.{stringsdict}"
