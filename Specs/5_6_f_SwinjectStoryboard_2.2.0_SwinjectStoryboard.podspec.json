{
  "name": "SwinjectStoryboard",
  "version": "2.2.0",
  "summary": "Swinject extension for automatic dependency injection via Storyboard",
  "description": "SwinjectStoryboard is an extension of Swinject to automatically inject dependency to view controllers instantiated by a storyboard.",
  "homepage": "https://github.com/Swinject/SwinjectStoryboard",
  "license": "MIT",
  "authors": "Swinject Contributors",
  "source": {
    "git": "https://github.com/Swinject/SwinjectStoryboard.git",
    "tag": "2.2.0"
  },
  "ios": {
    "source_files": [
      "Sources/*.{swift,m,h}",
      "Sources/iOS-tvOS/*.{swift,h,m}"
    ]
  },
  "osx": {
    "source_files": [
      "Sources/*.{swift,m,h}",
      "Sources/OSX/*.{swift,h,m}"
    ]
  },
  "tvos": {
    "source_files": [
      "Sources/*.{swift,m,h}",
      "Sources/iOS-tvOS/*.{swift,h,m}"
    ]
  },
  "platforms": {
    "ios": "8.0",
    "osx": "10.10",
    "tvos": "9.0"
  },
  "dependencies": {
    "Swinject": [
      "~> 2.6"
    ]
  },
  "requires_arc": true
}
