{
  "name": "upnpx",
  "version": "1.4.0a1",
  "license": "BSD",
  "platforms": {
    "ios": "6.1",
    "osx": "10.7",
    "tvos": "9.0"
  },
  "summary": "Open Source Mac OS X / iOS Cocoa UPnP Stack.",
  "homepage": "https://github.com/fkuehne/upnpx",
  "authors": {
    "Felix Paul KÃ¼hne": "fkuehne@videolan.org",
    "Bruno Keymolen": "bruno.keymolen@gmail.com",
    "Paul Williamson": "squarefrog@gmail.com"
  },
  "source": {
    "git": "https://github.com/fkuehne/upnpx.git",
    "tag": "1.4.0a1"
  },
  "description": "Static OS X & iOS UPnP library written in Cocoa (UPnP) and C++ (SSDP).The Current implementation has support for control point/client only.",
  "ios": {
    "source_files": [
      "src/{api,common,eventserver,ssdp,upnp}/*.{h,m,mm,c,cpp}",
      "src/port/ios/*.{h,m}"
    ],
    "public_header_files": [
      "src/api/*.h",
      "src/port/ios/*.h"
    ]
  },
  "tvos": {
    "source_files": [
      "src/{api,common,eventserver,ssdp,upnp}/*.{h,m,mm,c,cpp}",
      "src/port/ios/*.{h,m}"
    ],
    "public_header_files": [
      "src/api/*.h",
      "src/port/ios/*.h"
    ]
  },
  "osx": {
    "source_files": [
      "src/{api,common,eventserver,ssdp,upnp}/*.{h,m,mm,c,cpp}",
      "src/port/macos/*.{h,m}"
    ],
    "public_header_files": [
      "src/api/*.h",
      "src/port/macos/*.h"
    ]
  },
  "libraries": "c++",
  "xcconfig": {
    "CLANG_CXX_LANGUAGE_STANDARD": "c++0x",
    "CLANG_CXX_LIBRARY": "libc++"
  },
  "requires_arc": false
}
