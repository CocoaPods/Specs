    "Mykola Dementiev": "nikolas.dementiev@gmail.com"
  },
  "platforms": {
    "ios": "17.0"
  },
  "source": {
    "git": "https://github.com/nikolay-dementiev/DMUnLoader.git",
    "tag": "1.0.2"
  },
  "source_files": "Sources/**/*.{swift,h,m,c}",
  "exclude_files": [
    "Examples/**",
    "Sources/Deprecated/"
  ],
  "weak_frameworks": "XCTest",
  "requires_arc": true,
  "cocoapods_version": ">= 1.4.0",
  "swift_versions": [
    "5.0"
