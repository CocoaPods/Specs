{
  "name": "KIF",
  "version": "1.0.0",
  "summary": "Keep It Functional - iOS UI acceptance testing.",
  "homepage": "https://github.com/kif-framework/KIF/",
  "license": "Apache 2.0",
  "authors": [
    "Eric Firestone",
    "Jim Puls"
  ],
  "source": {
    "git": "https://github.com/kif-framework/KIF.git",
    "tag": "v1.0.0"
  },
  "platforms": {
    "ios": "4.3"
  },
  "source_files": [
    "Classes",
    "Additions"
  ],
  "public_header_files": [
    "Classes/**/*.h",
    "Additions/**/*-KIFAdditions.h"
  ],
  "xcconfig": {
    "GCC_PREPROCESSOR_DEFINITIONS": "$(inherited) RUN_KIF_TESTS=1"
  },
  "frameworks": "CoreGraphics",
  "prefix_header_contents": "#import <CoreGraphics/CoreGraphics.h>",
  "requires_arc": false
}
