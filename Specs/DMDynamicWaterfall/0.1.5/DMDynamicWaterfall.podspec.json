  "license": "MIT",
  "authors": {
    "Daniele Margutti": "me@danielemargutti.com"
  },
  "source": {
    "git": "https://github.com/malcommac/DMDynamicWaterfall.git",
    "tag": "0.1.5"
  },
  "platforms": {
    "ios": "7.0"
  },
  "requires_arc": true,
  "source_files": "Classes/**/*.{h,m}",
  "ios": {
    "exclude_files": "Classes/osx"
  },
  "osx": {
    "exclude_files": "Classes/ios"
  },
  "public_header_files": "Classes/**/*.h"
