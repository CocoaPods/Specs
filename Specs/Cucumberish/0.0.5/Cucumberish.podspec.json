{
  "name": "Cucumberish",
  "version": "0.0.5",
  "summary": "Cucumberish is an automated test framework for iOS and Mac OS X that uses the most possible human friendly language to define your automated test cases",
  "description": "Cucumberish is Objective-C and Swift framework for Behaviour Driven Development inspired by the amazing way of writing automated test cases introduced originally by Cucumber. With Cucumberish, you write your test cases in almost plain English language.",
  "homepage": "https://github.com/Ahmed-Ali/Cucumberish",
  "license": {
    "type": "MIT",
    "file": "LICENSE"
  },
  "authors": {
    "Ahmed Ali": "eng.ahmed.ali.awad@gmail.com"
  },
  "social_media_url": "https://www.linkedin.com/in/engahmedali",
  "platforms": {
    "ios": "7.0",
    "osx": "10.9"
  },
  "source": {
    "git": "https://github.com/Ahmed-Ali/Cucumberish.git",
    "tag": "v0.0.5"
  },
  "source_files": [
    "Cucumberish/*.{h,m}",
    "Cucumberish/Core/Managers/*.{h,m}",
    "Cucumberish/Core/Models/*.{h,m}",
    "Cucumberish/Utils/*.{h,m}",
    "Cucumberish/Dependencies/Gherkin",
    "Cucumberish/Core/CCIBlockDefinitions.h"
  ],
  "public_header_files": [
    "Cucumberish/Cucumberish.h",
    "Cucumberish/Core/Managers/CCIStepsManager.h",
    "Cucumberish/Core/CCIBlockDefinitions.h",
    "Cucumberish/Core/Models/CCIScenarioDefinition.h"
  ],
  "resource_bundles": {
    "Gherkin": [
      "Cucumberish/Dependencies/Gherkin/gherkin-languages.json"
    ]
  },
  "frameworks": "XCTest",
  "requires_arc": true,
  "xcconfig": {
    "GCC_PREPROCESSOR_DEFINITIONS": "SRC_ROOT=$(SRCROOT)"
  }
}
