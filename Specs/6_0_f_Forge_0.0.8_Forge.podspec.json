  },
  "authors": {
    "Reza Ali": "reza@hi-rez.io"
  },
  "social_media_url": "https://twitter.com/rezaali",
  "source": {
    "git": "https://github.com/Hi-Rez/Forge.git",
    "tag": "0.0.8"
  },
  "platforms": {
    "osx": "10.14",
    "ios": "12.4",
    "tvos": "12.4"
  },
  "osx": {
    "source_files": [
      "Forge/*.h",
      "Forge/Shared/**/*.{h,m,swift}",
      "Forge/macOS/**/*.{h,m,swift}"
    ],
    "resources": "Forge/macOS/*.xib"
  },
  "ios": {
    "source_files": [
      "Forge/*.h",
      "Forge/Shared/**/*.{h,m,swift}",
      "Forge/iOS/**/*.{h,m,swift}"
    ]
