{
  "name": "ObjC-Lua",
  "version": "1.0",
  "summary": "An Objective-C wrapper around Lua.",
  "homepage": "https://github.com/PedestrianSean/ObjC-Lua",
  "license": "BSD",
  "authors": {
    "Sean Meiners": "oss@ssttr.com"
  },
  "source": {
    "git": "https://github.com/PedestrianSean/ObjC-Lua.git",
