{
  "name": "PCVapPlayer",
  "version": "1.0.0",
  "summary": "PCVapPlayer is a high-performance video animation player library for iOS, written in Swift.",
  "description": "PCVapPlayer is a Swift-based video animation player library that supports hardware-accelerated video playback with alpha channel support. It uses Metal for rendering and provides a modern Swift API.",
  "homepage": "https://github.com/LangGuangZhou/PCVapPlayer",
  "license": {
    "type": "MIT",
    "file": "LICENSE"
  },
  "authors": {
    "LangGuangZhou": ""
  },
  "source": {
    "git": "https://github.com/LangGuangZhou/PCVapPlayer.git",
    "tag": "1.0.0"
  },
  "platforms": {
    "ios": "15.0"
  },
  "swift_versions": "5.0",
  "requires_arc": true,
  "source_files": [
    "Classes/**/*.swift",
    "Shaders/**/*.swift"
  ],
  "exclude_files": [
    "Tests/**/*",
    "**/*Tests.swift",
    "**/*Test.swift"
  ],
  "frameworks": [
    "UIKit",
    "MetalKit",
    "Metal",
    "AVFoundation",
    "QuartzCore",
    "Foundation",
    "CoreGraphics",
    "CoreVideo",
    "Accelerate"
  ],
  "pod_target_xcconfig": {
    "SWIFT_VERSION": "5.0",
    "SWIFT_OBJC_BRIDGING_HEADER": "",
    "METAL_LANGUAGE_VERSION": "metal2.0",
    "DEFINES_MODULE": "YES"
  },
  "xcconfig": {
    "SWIFT_OBJC_INTERFACE_HEADER_NAME": "",
    "SWIFT_INSTALL_OBJC_HEADER": "NO"
  },
  "swift_version": "5.0"
}
