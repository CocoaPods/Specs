{
  "name": "ComponentKit",
  "version": "0.30",
  "license": "BSD",
  "summary": "A React-inspired view framework for iOS",
  "homepage": "https://componentkit.org",
  "social_media_url": "https://twitter.com/componentkit",
  "authors": "adamjernst@fb.com",
  "source": {
    "git": "https://github.com/facebook/ComponentKit.git",
    "tag": "0.30"
  },
  "platforms": {
    "ios": "8.1"
  },
  "requires_arc": true,
  "source_files": [
    "ComponentKit/**/*",
    "ComponentTextKit/**/*"
  ],
  "exclude_files": [
    "ComponentKit/Info.plist"
  ],
  "frameworks": [
    "UIKit",
    "CoreText"
  ],
  "libraries": "c++",
  "xcconfig": {
    "CLANG_CXX_LANGUAGE_STANDARD": "gnu++14",
    "CLANG_CXX_LIBRARY": "libc++"
  },
  "dependencies": {
    "RenderCore": [
      "0.30"
    ],
    "Yoga": [
      "~> 1.14"
    ]
  }
}
