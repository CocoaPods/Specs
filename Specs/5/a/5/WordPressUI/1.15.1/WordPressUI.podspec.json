{
  "name": "WordPressUI",
  "version": "1.15.1",
  "summary": "Home of reusable WordPress UI components.",
  "description": "This framework contains standalone and reusable components, brought to you by the WordPress iOS Team.",
  "homepage": "https://github.com/wordpress-mobile/WordPressUI-iOS",
  "license": {
    "type": "GPLv2",
    "file": "LICENSE"
  },
  "authors": {
    "The WordPress Mobile Team": "mobile@wordpress.org"
  },
  "platforms": {
    "ios": "11.0"
  },
  "swift_versions": "5.0",
  "source": {
    "git": "https://github.com/wordpress-mobile/WordPressUI-iOS.git",
    "tag": "1.15.1"
  },
  "source_files": [
    "Sources/WordPressUI/**/*.{h,m,swift}",
    "Sources/WordPressUIObjC/**/*.{h,m,swift}"
  ],
  "resource_bundles": {
    "WordPressUIResources": [
      "Sources/WordPressUI/Resources/*.{xcassets,storyboard}"
    ]
  },
  "public_header_files": "Sources/WordPressUIObjC/include",
  "testspecs": [
    {
      "name": "Tests",
      "test_type": "unit",
      "source_files": [
        "Tests/WordPressUITests/**/*.{swift,h,m}"
      ]
    }
  ],
  "swift_version": "5.0"
}
