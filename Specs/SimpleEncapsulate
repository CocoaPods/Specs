Pod::Spec.new do |s|
  s.name         = "SimpleEncapsulate"
  s.version      = "0.1.0"
  s.summary      = "A simple encapsulate base on AFNetworking and FMDB."
  s.description  = <<-DESC
                    It's a simple encapsulate, with AFNetworking or FMDB, we can easily manipulate Object! Actually, it's a way to
                    serialize & unserialize object from NSDictionary or NSArray. See the demo to check how to use it.
                    DESC
  s.author       = { “tianyouhui” => “tianyouhui@163.com” }
  s.source       = { :git => "https://github.com/tianyouhui/simpleencapsulate” :tag => “0.0.1” }
  s.platform     = :ios, ‘6.0’
  s.source_files = ['SimpleEncapsulate/**/*.{h,m}']
  s.license 	   = "MIT"
  s.requires_arc = true
  s.dependency ”AFNetworking", "~> 2.0”
  s.dependency “FMDB”, “~> 2.0”
  
end
